{
  "name": "ilotto-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "iLotto monorepo with Turborepo",
  "scripts": {
    "dev": "pnpm --filter './apps/web' --filter './apps/admin' --filter './apps/partner' --parallel dev",
    "build": "pnpm exec turbo run build --filter='./apps/*' --filter='./packages/*'",
    "start": "pnpm --filter './apps/web' --filter './apps/admin' --filter './apps/partner' --parallel start",
    "lint": "pnpm exec turbo run lint --filter='./apps/*' --filter='./packages/*'",
    "clean": "pnpm exec turbo run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "turbo": "^2.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
