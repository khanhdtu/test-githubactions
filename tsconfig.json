{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "paths": {
      "@catchlotto/ui": ["./packages/ui"],
      "@catchlotto/utils": ["./packages/utils"],
      "@catchlotto/config": ["./packages/config"]
    }
  },
  "include": [],
  "exclude": ["node_modules"]
}
